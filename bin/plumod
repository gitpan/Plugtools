use strict;
use warnings;
use Getopt::Std;
use Plugtools;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
        print "plumod 0.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
        print "\n".
		      "-u <user>  - The user to remove.\n".
			  "-a <action>  - The action to perform.\n".
			  "-g <GID>  - The GID to change the user to.\n".
			  "-U <UID>  - The UID to change.\n".
			  "-c <GECOS>  - The GECOS to set the user to.\n".
			  "-l  - Print any changes to LDAP.\n".
			  "\n".
			  "actions:\n".
			  "gecos - Change the GECOS field for a user.\n".
			  "gid - Change the primary GID for a user.\n".
			  "uid - Change the UID for a user.\n".
			  "\n".
			  "For more info, see the the perldocs for Plugtools and plurm...\n".
			  "perldoc plurm\n".
			  "perldoc Plugtools\n";
}

#gets the options
my %opts=();
getopts('u:a:g:U:c:l', \%opts);

if (!defined($opts{u})) {
	warn('plgrm:254: No user name specified');
	exit 254;
}

if (!defined($opts{u})) {
	warn('plgrm:253: No action specified');
	exit 253;
}

my $pt=Plugtools->new;
if ($pt->{error}) {
	warn('plgrm: Failed to initialize the Plugtools object');
	exit $pt->{error};
}

if ($opts{a} eq 'gecos') {
	$pt->userGECOSchange({
						  user=>$opts{u},
						  gecos=>$opts{c},
						  dump=>$opts{l},
						  });
	if ($pt->{error}) {
		warn('plgrm: Failed to remove the group');
		exit $pt->{error};
	}
}

if ($opts{a} eq 'gid') {
	$pt->userGIDchange({
						  user=>$opts{u},
						  gid=>$opts{g},
						  dump=>$opts{l},
						  });
	if ($pt->{error}) {
		warn('plgrm: Failed to remove the group');
		exit $pt->{error};
	}
}

if ($opts{a} eq 'uid') {
	$pt->userGIDchange({
						  user=>$opts{u},
						  uid=>$opts{U},
						  dump=>$opts{l},
						  });
	if ($pt->{error}) {
		warn('plgrm: Failed to remove the group');
		exit $pt->{error};
	}
}

exit 0;

=head1 NAME

plumod - Modify a user in LDAP.

=head1 SYNOPSIS

plurm B<-u> <user> [B<-H> (0|1)] [B<-G> (0|1)]

=head1 SWITCHES

=head2 -u <user>

This specifies the user to remove.



=head1 EXIT CODES

If the exit code is not listed below, it is what was the error code returned by Plugtools.

=head2 254

No user specified.

=head2 253

No action specified.

